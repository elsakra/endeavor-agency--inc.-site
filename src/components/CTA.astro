<section id="contact" class="py-24 md:py-32 lg:py-40 bg-gradient-to-br from-black to-stone-900 relative overflow-hidden" data-module-key="contact" data-dominant-signal="headline">
  <!-- Background texture -->
  <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,rgba(251,191,36,0.15),transparent_70%)]"></div>
  
  <div class="relative z-10 max-w-7xl mx-auto px-6 lg:px-8 text-center">
    <div class="max-w-4xl mx-auto animate-on-scroll">
      <h2 class="text-5xl lg:text-6xl font-bold -tracking-tight text-white mb-6" data-section-header-recipe="primary">
        Ready to Transform Your Leadership?
      </h2>
      <p class="text-lg lg:text-xl leading-relaxed font-normal text-stone-300 mb-12">
        Take the first step toward exceptional executive performance. Schedule a confidential consultation to discuss your leadership goals.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-6 justify-center items-center mb-12">
        <a href="/consultation" class="inline-flex items-center gap-2 px-8 py-4 text-lg font-semibold bg-amber-600 text-white rounded-full shadow-xl hover:shadow-2xl hover:scale-[1.02] transition-all duration-300" data-button-recipe="primary">
          Schedule Executive Consultation
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
        <a href="/assessment" class="inline-flex items-center gap-2 px-8 py-4 text-lg font-semibold bg-white text-black rounded-full shadow-lg hover:shadow-xl hover:scale-[1.02] transition-all duration-300">
          Download Leadership Assessment
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
        </a>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-16">
        <div class="text-center animate-on-scroll">
          <div class="w-16 h-16 bg-amber-600 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-white mb-2">Call Us</h3>
          <p class="text-stone-400">+1 (555) 123-4567</p>
        </div>
        <div class="text-center animate-on-scroll">
          <div class="w-16 h-16 bg-amber-600 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-white mb-2">Email Us</h3>
          <p class="text-stone-400">contact@endeavorexecutive.com</p>
        </div>
        <div class="text-center animate-on-scroll">
          <div class="w-16 h-16 bg-amber-600 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-white mb-2">Visit Us</h3>
          <p class="text-stone-400">New York, NY</p>
        </div>
      </div>
    </div>
  </div>
</section>