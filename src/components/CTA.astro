<section id="contact" class="py-32 md:py-40 lg:py-48 bg-slate-950 relative overflow-hidden" data-module-key="contact" data-dominant-signal="headline">
  <!-- Background Elements -->
  <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,rgba(217,119,6,0.15),transparent_70%)]"></div>
  <div class="absolute bottom-0 right-0 w-[800px] h-[800px] bg-amber-500/10 rounded-full blur-[150px]"></div>
  
  <div class="relative z-10 max-w-4xl mx-auto px-6 md:px-12 text-center">
    <h2 class="text-5xl md:text-6xl lg:text-7xl font-bold tracking-tighter text-white mb-8 animate-on-scroll font-display" data-section-header-recipe="primary">
      Ready to Transform<br/>
      <span class="gradient-text">Your Organization?</span>
    </h2>
    
    <p class="text-xl leading-relaxed text-slate-400 mb-12 max-w-2xl mx-auto animate-on-scroll" style="animation-delay: 100ms;">
      Schedule a confidential consultation with our executive team to discuss your challenges and opportunities.
    </p>
    
    <div class="flex flex-col sm:flex-row gap-6 justify-center items-center animate-on-scroll" style="animation-delay: 200ms;">
      <a href="/consultation" class="inline-flex items-center gap-3 px-8 py-4 bg-amber-500 text-slate-950 rounded-full font-medium hover:scale-105 hover:bg-amber-400 transition-all duration-300 shadow-lg shadow-amber-500/50 hover:shadow-xl hover:shadow-amber-500/40" data-button-recipe="primary">
        Schedule Executive Consultation
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </a>
      
      <div class="flex items-center gap-4 text-slate-400">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
        </svg>
        <span>Or call us at <a href="tel:+1234567890" class="text-amber-500 hover:text-amber-400 transition-colors">+1 (234) 567-890</a></span>
      </div>
    </div>
    
    <!-- Trust Indicators -->
    <div class="mt-16 pt-16 border-t border-white/10">
      <p class="text-sm text-slate-500 mb-8">Trusted by leaders at</p>
      <div class="flex flex-wrap justify-center items-center gap-8 opacity-50">
        <div class="text-white font-semibold text-lg">Fortune 500</div>
        <div class="text-white font-semibold text-lg">S&P Global</div>
        <div class="text-white font-semibold text-lg">Tech Innovators</div>
        <div class="text-white font-semibold text-lg">Growth Leaders</div>
      </div>
    </div>
  </div>
</section>