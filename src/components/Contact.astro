<section id="contact" class="py-24 md:py-32 bg-white">
  <div class="max-w-7xl mx-auto px-6 md:px-8">
    <div class="grid lg:grid-cols-2 gap-16">
      <div class="space-y-8">
        <p class="text-sm uppercase tracking-[0.2em] text-amber-600 font-medium animate-on-scroll">
          GET IN TOUCH
        </p>
        <h2 class="text-5xl md:text-6xl font-black tracking-tighter leading-[0.9] animate-on-scroll">
          Let's Start a<br/>Conversation
        </h2>
        <p class="text-lg text-stone-600 animate-on-scroll">
          Whether you're seeking exceptional talent or exploring new opportunities, we're here to help.
        </p>
        
        <div class="space-y-6 animate-on-scroll">
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 bg-amber-100 rounded-xl flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-amber-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-lg mb-1">Email</h3>
              <a href="mailto:contact@endeavoragency.com" class="text-stone-600 hover:text-amber-600 transition-colors duration-300">contact@endeavoragency.com</a>
            </div>
          </div>
          
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 bg-amber-100 rounded-xl flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-amber-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-lg mb-1">Phone</h3>
              <a href="tel:+1-555-0123" class="text-stone-600 hover:text-amber-600 transition-colors duration-300">+1 (555) 012-3456</a>
            </div>
          </div>
          
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 bg-amber-100 rounded-xl flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-amber-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-lg mb-1">Office</h3>
              <p class="text-stone-600">
                123 Executive Plaza<br/>
                New York, NY 10001
              </p>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Contact Form -->
      <div class="bg-stone-50 rounded-2xl p-8 md:p-10 animate-on-scroll">
        <form class="space-y-6">
          <div>
            <label for="name" class="block text-sm font-medium text-stone-700 mb-2">Name</label>
            <input 
              type="text" 
              id="name" 
              name="name" 
              required
              class="w-full px-4 py-3 rounded-lg border border-stone-200 focus:border-amber-500 focus:ring-2 focus:ring-amber-200 transition-colors duration-300"
              placeholder="John Doe"
            />
          </div>
          
          <div>
            <label for="email" class="block text-sm font-medium text-stone-700 mb-2">Email</label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              required
              class="w-full px-4 py-3 rounded-lg border border-stone-200 focus:border-amber-500 focus:ring-2 focus:ring-amber-200 transition-colors duration-300"
              placeholder="john@company.com"
            />
          </div>
          
          <div>
            <label for="company" class="block text-sm font-medium text-stone-700 mb-2">Company</label>
            <input 
              type="text" 
              id="company" 
              name="company"
              class="w-full px-4 py-3 rounded-lg border border-stone-200 focus:border-amber-500 focus:ring-2 focus:ring-amber-200 transition-colors duration-300"
              placeholder="Acme Corp"
            />
          </div>
          
          <div>
            <label for="message" class="block text-sm font-medium text-stone-700 mb-2">Message</label>
            <textarea 
              id="message" 
              name="message" 
              rows="4"
              required
              class="w-full px-4 py-3 rounded-lg border border-stone-200 focus:border-amber-500 focus:ring-2 focus:ring-amber-200 transition-colors duration-300 resize-none"
              placeholder="Tell us about your executive search needs..."
            ></textarea>
          </div>
          
          <button 
            type="submit"
            class="w-full px-8 py-4 text-lg font-semibold bg-black text-white rounded-full hover:bg-stone-800 hover:scale-[1.02] transition-all duration-300"
          >
            Send Message
          </button>
        </form>
      </div>
    </div>
  </div>
</section>