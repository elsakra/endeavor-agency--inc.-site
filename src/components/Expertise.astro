---
const industries = [
  { name: "Technology", percentage: 35 },
  { name: "Financial Services", percentage: 25 },
  { name: "Healthcare", percentage: 20 },
  { name: "Manufacturing", percentage: 20 }
];

const stats = [
  { number: "500+", label: "Executive Placements" },
  { number: "98%", label: "Client Retention" },
  { number: "25+", label: "Years Experience" },
  { number: "150+", label: "Global Clients" }
];
---

<section id="expertise" class="py-20 md:py-32 bg-slate-900 text-white overflow-hidden relative">
  <!-- Background texture -->
  <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,rgba(59,130,246,0.15),transparent_70%)]"></div>
  
  <!-- Background image -->
  <div class="absolute inset-0 z-0">
    <img 
      src="https://images.unsplash.com/photo-1486406146926-c627a92ad1ab?auto=format&fit=crop&w=2000&q=80" 
      alt="City skyline"
      class="w-full h-full object-cover opacity-5"
    />
  </div>
  
  <div class="relative z-10 max-w-5xl mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold tracking-tight mb-4 animate-on-scroll">
        Industry Expertise
      </h2>
      <p class="text-xl text-slate-300 max-w-2xl mx-auto animate-on-scroll" data-delay="100">
        Deep sector knowledge across transformative industries
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 gap-12 mb-20">
      <div class="animate-on-scroll" data-delay="200">
        <h3 class="text-2xl font-bold mb-8">Sector Focus</h3>
        <div class="space-y-6">
          {industries.map(industry => (
            <div>
              <div class="flex justify-between mb-2">
                <span class="font-medium">{industry.name}</span>
                <span class="text-slate-400">{industry.percentage}%</span>
              </div>
              <div class="w-full bg-slate-800 rounded-full h-3">
                <div 
                  class="bg-gradient-to-r from-blue-600 to-blue-400 h-3 rounded-full transition-all duration-1000"
                  style={`width: ${industry.percentage}%`}
                ></div>
              </div>
            </div>
          ))}
        </div>
      </div>
      
      <div class="animate-on-scroll" data-delay="300">
        <h3 class="text-2xl font-bold mb-8">Our Impact</h3>
        <p class="text-slate-300 leading-relaxed mb-6">
          We've partnered with industry leaders to identify and place exceptional executives who drive meaningful change. Our deep understanding of sector-specific challenges ensures perfect alignment between leadership capabilities and organizational needs.
        </p>
        <p class="text-slate-300 leading-relaxed">
          From Fortune 500 companies to high-growth startups, our expertise spans the full spectrum of organizational maturity and complexity.
        </p>
      </div>
    </div>
    
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
      {stats.map((stat, index) => (
        <div class="text-center animate-on-scroll" data-delay={`${(index + 1) * 100}`}>
          <div class="text-4xl md:text-5xl font-black text-gradient mb-2">{stat.number}</div>
          <div class="text-slate-400">{stat.label}</div>
        </div>
      ))}
    </div>
  </div>
</section>