---

<section id="expertise" class="py-32 md:py-40 bg-black relative overflow-hidden" data-module-key="expertise" data-dominant-signal="stat">
  <!-- Background Gradient Orbs -->
  <div class="absolute top-0 left-1/5 w-[500px] h-[500px] bg-amber-500/30 rounded-full blur-[120px]"></div>
  <div class="absolute bottom-0 right-1/5 w-[400px] h-[400px] bg-amber-600/20 rounded-full blur-[100px]"></div>
  
  <div class="relative z-10 max-w-7xl mx-auto px-6 lg:px-8">
    <div class="text-center mb-20 animate-on-scroll">
      <h2 class="text-5xl md:text-6xl font-black tracking-tight uppercase text-white mb-8" data-section-header-recipe="primary">
        Industry Expertise
      </h2>
      <p class="text-xl text-zinc-400 max-w-3xl mx-auto">
        Three decades of executive placement excellence across diverse sectors
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 mb-20">
      <div class="text-center animate-on-scroll">
        <div class="text-6xl md:text-7xl font-black text-amber-500 mb-2" data-stat-recipe="primary">500+</div>
        <p class="text-zinc-400">Executive Placements</p>
      </div>
      <div class="text-center animate-on-scroll">
        <div class="text-6xl md:text-7xl font-black text-amber-500 mb-2" data-stat-recipe="primary">98%</div>
        <p class="text-zinc-400">Retention Rate</p>
      </div>
      <div class="text-center animate-on-scroll">
        <div class="text-6xl md:text-7xl font-black text-amber-500 mb-2" data-stat-recipe="primary">30</div>
        <p class="text-zinc-400">Years Experience</p>
      </div>
      <div class="text-center animate-on-scroll">
        <div class="text-6xl md:text-7xl font-black text-amber-500 mb-2" data-stat-recipe="primary">15</div>
        <p class="text-zinc-400">Industry Sectors</p>
      </div>
    </div>
    
    <div class="grid md:grid-cols-2 gap-12 md:gap-16 animate-on-scroll">
      <div>
        <h3 class="text-3xl md:text-4xl font-bold text-white mb-8">Sectors We Serve</h3>
        <div class="grid grid-cols-2 gap-4">
          <div class="backdrop-blur-xl bg-white/5 border border-white/10 rounded-none p-6 hover:bg-white/10 transition-all duration-300">
            <p class="text-white font-semibold">Technology</p>
          </div>
          <div class="backdrop-blur-xl bg-white/5 border border-white/10 rounded-none p-6 hover:bg-white/10 transition-all duration-300">
            <p class="text-white font-semibold">Healthcare</p>
          </div>
          <div class="backdrop-blur-xl bg-white/5 border border-white/10 rounded-none p-6 hover:bg-white/10 transition-all duration-300">
            <p class="text-white font-semibold">Financial Services</p>
          </div>
          <div class="backdrop-blur-xl bg-white/5 border border-white/10 rounded-none p-6 hover:bg-white/10 transition-all duration-300">
            <p class="text-white font-semibold">Manufacturing</p>
          </div>
        </div>
      </div>
      
      <div>
        <img 
          src="https://images.unsplash.com/photo-1486406146926-c627a92ad1ab?w=2400&q=95" 
          alt="Corporate building architecture"
          class="w-full h-[400px] object-cover rounded-none"
        />
      </div>
    </div>
  </div>
</section>