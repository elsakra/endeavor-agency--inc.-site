---

<section id="home" class="relative min-h-screen bg-cream-50 overflow-hidden">
  <!-- Subtle gradient orbs for warmth -->
  <div class="absolute top-0 right-0 w-[600px] h-[600px] bg-amber-100/30 rounded-full blur-[120px]"></div>
  <div class="absolute bottom-0 left-0 w-[500px] h-[500px] bg-rose-100/20 rounded-full blur-[100px]"></div>
  
  <!-- Navigation -->
  <nav class="relative z-20 py-6 md:py-8">
    <div class="max-w-7xl mx-auto px-6 md:px-8">
      <div class="flex items-center justify-between">
        <!-- Logo -->
        <a href="/" class="text-2xl font-black tracking-tight text-black">
          ENDEAVOR
        </a>
        
        <!-- Desktop Navigation -->
        <div class="hidden md:flex items-center gap-8">
          <a href="#services" class="text-sm font-medium text-stone-600 hover:text-black transition-colors duration-300">Services</a>
          <a href="#about" class="text-sm font-medium text-stone-600 hover:text-black transition-colors duration-300">About</a>
          <a href="#process" class="text-sm font-medium text-stone-600 hover:text-black transition-colors duration-300">Process</a>
          <a href="#contact" class="inline-flex items-center gap-2 px-6 py-3 text-sm font-semibold bg-black text-white rounded-full hover:bg-stone-800 hover:scale-105 transition-all duration-300">
            Start Your Search
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </nav>
  
  <!-- Hero Content -->
  <div class="relative z-10 max-w-7xl mx-auto px-6 md:px-8 py-20 md:py-32">
    <div class="grid md:grid-cols-2 gap-16 items-center">
      <div class="space-y-8">
        <p class="text-sm uppercase tracking-[0.2em] text-amber-600 font-medium animate-on-scroll">
          EXECUTIVE SEARCH EXCELLENCE
        </p>
        <h1 class="text-6xl md:text-7xl lg:text-8xl font-black leading-[0.85] -tracking-[0.04em] text-black animate-on-scroll">
          LEADERS<br/>
          WORTH<br/>
          FINDING
        </h1>
        <p class="text-lg md:text-xl text-stone-600 max-w-md animate-on-scroll">
          We connect exceptional executives with transformative opportunities.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 animate-on-scroll">
          <a href="#contact" class="inline-flex items-center gap-2 px-8 py-4 text-lg font-semibold bg-black text-white rounded-full hover:bg-stone-800 hover:scale-105 transition-all duration-300">
            Start Your Search
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
          <a href="#services" class="inline-flex items-center gap-2 px-8 py-4 text-lg font-semibold bg-white text-black rounded-full border border-stone-200 hover:border-stone-400 hover:scale-105 transition-all duration-300">
            Explore Services
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </a>
        </div>
      </div>
      
      <!-- Hero Image -->
      <div class="relative animate-on-scroll">
        <div class="aspect-[4/5] rounded-2xl overflow-hidden shadow-2xl">
          <img 
            src="https://images.unsplash.com/photo-1560250097-0b93528c311a?q=80&w=2574&auto=format&fit=crop" 
            alt="Executive in professional attire"
            class="w-full h-full object-cover"
          />
        </div>
        <!-- Decorative element -->
        <div class="absolute -bottom-6 -right-6 w-48 h-48 bg-amber-200/30 rounded-full blur-3xl"></div>
      </div>
    </div>
  </div>
  
  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-stone-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>