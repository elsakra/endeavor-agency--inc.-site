---

<section id="home" class="relative min-h-screen flex items-center justify-center overflow-hidden bg-white">
  <!-- Background gradient orbs -->
  <div class="absolute top-0 left-1/4 w-[600px] h-[600px] bg-blue-600/20 rounded-full blur-[120px]"></div>
  <div class="absolute bottom-0 right-1/4 w-[500px] h-[500px] bg-blue-400/15 rounded-full blur-[100px]"></div>
  
  <!-- Background image -->
  <div class="absolute inset-0 z-0">
    <img 
      src="https://images.unsplash.com/photo-1497366216548-37526070297c?auto=format&fit=crop&w=2000&q=80" 
      alt="Modern office space"
      class="w-full h-full object-cover opacity-10"
    />
  </div>
  
  <div class="relative z-10 max-w-5xl mx-auto px-6 text-center">
    <h1 class="text-5xl md:text-7xl lg:text-8xl font-black tracking-tight text-slate-900 mb-6 animate-on-scroll">
      Executive Excellence
      <span class="text-gradient block">Delivered</span>
    </h1>
    
    <p class="text-xl md:text-2xl text-slate-600 max-w-3xl mx-auto mb-12 leading-relaxed animate-on-scroll" data-delay="100">
      Premier executive search and leadership consulting for transformative organizations
    </p>
    
    <div class="flex flex-col sm:flex-row gap-4 justify-center animate-on-scroll" data-delay="200">
      <a href="/contact" class="inline-flex items-center gap-2 px-8 py-4 text-lg font-semibold bg-blue-600 text-white rounded-full shadow-lg shadow-blue-500/25 hover:shadow-xl hover:shadow-blue-500/30 hover:scale-105 transition-all duration-300">
        Schedule Consultation
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
      <a href="#services" class="inline-flex items-center gap-2 px-8 py-4 text-lg font-semibold bg-white text-slate-900 rounded-full border border-slate-200 hover:border-slate-300 hover:scale-105 transition-all duration-300">
        View Our Expertise
      </a>
    </div>
  </div>
  
  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>