---
const services = [
  {
    title: "Executive Search",
    description: "Identifying and recruiting C-suite leaders who drive transformational change",
    icon: "search",
    features: ["CEO & President", "CFO & COO", "Board Directors"]
  },
  {
    title: "Leadership Assessment",
    description: "Comprehensive evaluation of leadership capabilities and organizational fit",
    icon: "assessment",
    features: ["360Â° Reviews", "Psychometric Testing", "Cultural Alignment"]
  },
  {
    title: "Succession Planning",
    description: "Strategic roadmaps for seamless leadership transitions",
    icon: "planning",
    features: ["Talent Pipeline", "Development Programs", "Risk Mitigation"]
  },
  {
    title: "Board Advisory",
    description: "Expert guidance on governance, composition, and effectiveness",
    icon: "advisory",
    features: ["Board Evaluation", "Director Search", "Governance Best Practices"]
  }
];
---

<section id="services" class="py-20 md:py-32 bg-slate-50">
  <div class="max-w-5xl mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold tracking-tight text-slate-900 mb-4 animate-on-scroll">
        Our Services
      </h2>
      <p class="text-xl text-slate-600 max-w-2xl mx-auto animate-on-scroll" data-delay="100">
        Comprehensive executive solutions tailored to your organization's unique needs
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 gap-6">
      {services.map((service, index) => (
        <div class="bg-white rounded-2xl p-8 shadow-xl shadow-slate-200/50 hover:shadow-2xl hover:-translate-y-1 transition-all duration-300 animate-on-scroll" data-delay={`${(index + 1) * 100}`}>
          <div class="w-12 h-12 bg-blue-600 rounded-xl flex items-center justify-center mb-6">
            {service.icon === "search" && (
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
            )}
            {service.icon === "assessment" && (
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            )}
            {service.icon === "planning" && (
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
              </svg>
            )}
            {service.icon === "advisory" && (
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
              </svg>
            )}
          </div>
          
          <h3 class="text-2xl font-bold text-slate-900 mb-3">{service.title}</h3>
          <p class="text-slate-600 mb-6 leading-relaxed">{service.description}</p>
          
          <ul class="space-y-2">
            {service.features.map(feature => (
              <li class="flex items-center gap-2 text-slate-700">
                <svg class="w-5 h-5 text-blue-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                {feature}
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</section>