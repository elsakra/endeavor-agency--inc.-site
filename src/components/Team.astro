---
const team = [
  {
    name: "Michael Harrison",
    role: "Founder & CEO",
    bio: "25+ years in executive search with deep expertise in technology and financial services leadership",
    image: "https://images.unsplash.com/photo-1560250097-0b93528c311a?w=400&h=400&fit=crop&auto=format&q=80"
  },
  {
    name: "Sarah Chen",
    role: "Managing Partner",
    bio: "Former Fortune 500 CHRO specializing in leadership assessment and organizational transformation",
    image: "https://images.unsplash.com/photo-1573496359142-b8d87734a5a2?w=400&h=400&fit=crop&auto=format&q=80"
  },
  {
    name: "David Williams",
    role: "Senior Partner",
    bio: "Expert in healthcare and life sciences executive placement with global search capabilities",
    image: "https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=400&h=400&fit=crop&auto=format&q=80"
  },
  {
    name: "Elena Rodriguez",
    role: "Partner",
    bio: "Specializes in board advisory and governance with extensive private equity experience",
    image: "https://images.unsplash.com/photo-1580489944761-15a19d654956?w=400&h=400&fit=crop&auto=format&q=80"
  }
];
---

<section id="team" class="py-20 md:py-32 bg-white">
  <div class="max-w-5xl mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold tracking-tight text-slate-900 mb-4 animate-on-scroll">
        Leadership Team
      </h2>
      <p class="text-xl text-slate-600 max-w-2xl mx-auto animate-on-scroll" data-delay="100">
        Trusted advisors with unparalleled expertise in executive talent
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      {team.map((member, index) => (
        <div class="text-center animate-on-scroll" data-delay={`${(index + 1) * 100}`}>
          <div class="relative mb-6 group">
            <img 
              src={member.image} 
              alt={member.name}
              class="w-32 h-32 mx-auto rounded-full object-cover ring-4 ring-slate-100 group-hover:ring-blue-100 transition-all duration-300"
            />
            <div class="absolute inset-0 w-32 h-32 mx-auto rounded-full bg-blue-600/20 scale-110 opacity-0 group-hover:opacity-100 blur-xl transition-all duration-300"></div>
          </div>
          <h3 class="text-xl font-bold text-slate-900 mb-1">{member.name}</h3>
          <p class="text-blue-600 font-medium mb-3">{member.role}</p>
          <p class="text-slate-600 text-sm leading-relaxed">{member.bio}</p>
        </div>
      ))}
    </div>
  </div>
</section>